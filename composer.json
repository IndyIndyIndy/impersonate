{
    "name": "christianessl/impersonate",
    "type": "typo3-cms-extension",
    "description": "Impersonate frontend users from inside the TYPO3 Backend.",
    "keywords": [
        "TYPO3",
        "extension"
    ],
    "license": "GPL-2.0-or-later",
    "homepage": "https://christianessl.at",
    "authors": [
        {
            "name": "Christian Essl",
            "role": "Developer"
        }
    ],
    "version": "2.0.0",
    "require": {
        "typo3/cms-core": "^11.5",
        "typo3/cms-backend": "^11.5",
        "typo3/cms-extbase": "^11.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "helmich/typo3-typoscript-lint": "^2.5",
        "squizlabs/php_codesniffer": "^3.6",
        "typo3/tailor": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "ChristianEssl\\Impersonate\\": "Classes"
        }
    },
    "replace": {
        "typo3-ter/impersonate": "self.version"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "extension-key": "impersonate",
            "web-dir": ".Build/public"
        }
    },
    "scripts": {
        "test": [
            "@test-php-cs-fixer",
            "@test-typoscript-lint"
        ],
        "test-php-cs-fixer": ".Build/bin/php-cs-fixer fix -v --dry-run --stop-on-violation",
        "run-php-cs-fixer": ".Build/bin/php-cs-fixer fix -v",
        "test-typoscript-lint": ".Build/bin/typoscript-lint -c .typoscript-lint.yml"
    },
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": true,
            "typo3/class-alias-loader": true
        },
        "bin-dir": ".Build/bin",
        "vendor-dir": ".Build/vendor"
    }
}
